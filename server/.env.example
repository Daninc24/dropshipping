# üñ•Ô∏è Server Environment Variables Template
# Copy this file to server/.env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5003
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/ecommerce

# JWT
JWT_SECRET=super-secret-jwt-key-for-development-change-in-production-12345
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=demo
CLOUDINARY_API_KEY=demo-key
CLOUDINARY_API_SECRET=demo-secret

# Email (Optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=demo@example.com
SMTP_PASSWORD=demo-password

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
ENABLE_RATE_LIMITING=false