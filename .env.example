# üåç Kenya E-Commerce Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ================================
# üñ•Ô∏è SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# ================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/ecommerce-kenya

# ================================
# üîê JWT AUTHENTICATION
# ================================
# Generate a strong secret key (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ================================
# ‚òÅÔ∏è CLOUDINARY (IMAGE UPLOAD)
# ================================
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ================================
# üí≥ M-PESA CONFIGURATION (KENYA PAYMENTS)
# ================================
# Get from Safaricom Developer Portal: https://developer.safaricom.co.ke
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_BUSINESS_SHORTCODE=174379
MPESA_PASSKEY=your-mpesa-passkey
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# ================================
# üìß EMAIL CONFIGURATION (OPTIONAL)
# ================================
# For password reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ================================
# üöÄ REDIS CONFIGURATION (OPTIONAL)
# ================================
# For caching and session storage
REDIS_URL=redis://localhost:6379

# ================================
# üõ°Ô∏è RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
ENABLE_RATE_LIMITING=false

# ================================
# üì± WHATSAPP BUSINESS API (OPTIONAL)
# ================================
# For customer support integration
WHATSAPP_BUSINESS_PHONE_ID=your-phone-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# ================================
# üèõÔ∏è KENYA TAX CONFIGURATION
# ================================
# Kenya Revenue Authority (KRA) settings
VAT_RATE=0.16
TAX_PIN=your-kra-pin

# ================================
# üìÅ FILE UPLOAD CONFIGURATION
# ================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ================================
# üîí SESSION CONFIGURATION
# ================================
SESSION_SECRET=your-session-secret

# ================================
# üöö DELIVERY CONFIGURATION
# ================================
DEFAULT_DELIVERY_FEE=200
FREE_DELIVERY_THRESHOLD=2000

# ================================
# üí∞ CURRENCY CONFIGURATION
# ================================
DEFAULT_CURRENCY=KES
CURRENCY_SYMBOL=KES

# ================================
# üìä ANALYTICS (OPTIONAL)
# ================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Facebook Pixel
FACEBOOK_PIXEL_ID=your-pixel-id

# ================================
# üîß DEVELOPMENT TOOLS
# ================================
# Enable detailed logging in development
DEBUG=true
LOG_LEVEL=info

# ================================
# üåê PRODUCTION SETTINGS
# ================================
# Only set these in production
# HTTPS_REDIRECT=true
# SECURE_COOKIES=true
# CORS_ORIGIN=https://yourdomain.com

# ================================
# üè™ BUSINESS INFORMATION
# ================================
# Your business details for receipts and legal pages
BUSINESS_NAME=Your Business Name
BUSINESS_ADDRESS=Your Business Address, Nairobi, Kenya
BUSINESS_PHONE=+254 700 123 456
BUSINESS_EMAIL=business@yourdomain.com
BUSINESS_REGISTRATION_NUMBER=your-registration-number